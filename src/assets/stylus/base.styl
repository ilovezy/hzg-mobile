#page
  -webkit-touch-callout:none;
  -moz-touch-callout:none;
  -ms-touch-callout:none;
  touch-callout:none;
  z-index 100
.flexview
  z-index 200
.header-tab
  position absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width 100%
  height: 100%
  z-index 800
  .tab-head
    position: fixed
    z-index 1000
    left: 0
    right: 0
  .tab-nav
    padding 0 15%
    position: absolute
    top: 0
    left: 0
    right: 0
    z-index 1000
    box-sizing content-box
    height: .85rem
    background-color #fff
    .tab-nav-item
      font-size .34rem
  .back-icon
    z-index 1100
    position: absolute
    left: .3rem
    display flex
    height: .85rem
    line-height .85rem
    align-items: center;
  .tab-panel
    padding-top .85rem
    min-height 100%
    background-color transparent
    .list-donetip
      margin-bottom 0
    .tab-panel-item
      padding: 0
.notavailable
  position absolute
  margin auto
  top: 0
  right: 0
  bottom 0
  left: 0
  height: 2.48rem
  text-align: center
  .not_icon
    display block
    margin 0 auto .3rem
    width 3.38rem
    height 1.78rem
  .not_txt
    color #bbb
    font-size .28rem
  .btn
    margin-top .8rem
    width 2rem
    height: .8rem
    font-size .28rem
    color #999
    line-height .8rem
.countdown
  display inline-block
  color #d82d2d
  font-size .18rem
  height: .4rem
  i
    display: inline-block
    overflow: hidden;
    width .4rem
    height: .4rem
    line-height .4rem
    margin-right: .04rem
    text-align: center
    border: 1px solid #d82d2d
    border-radius .1rem
    vertical-align: middle
    font-size: .24rem
//文本对齐
.text-left
  text-align left
.text-right
  text-align right
.text-center
  text-align center
.global-top-tips
  margin-bottom .6rem
  padding .24rem .3rem
  background: #fdf3f3;
  font-size: .24rem;
  color: #d82d2d;
// 温馨提示
.warm-prompt
  position: absolute
  bottom .3rem
  left: .3rem
  right: .3rem
  color #bbb
  font-size .24rem
  &.inherit
    position: inherit
    left auto
    right: auto
    bottom: auto
    top: auto
    padding .3rem
  & dt
    padding-bottom .15rem
  & dd
    position: relative
    padding-left .2rem
    padding-top .05rem
    &:after
      position: absolute
      display block
      left: 0
      top: .05rem
      line-height 1.5
      content '*'
//分割线标题
.splitline-title
  position relative
  margin .6rem 0
  height: .04rem
  background-color #ddd
  text-align: center
  h3
    position: absolute
    left 50%
    width 100%
    top: -.18rem
    display block
    font-size: .28rem
    color: #bbb
    span
      position absolute
      display block
      left -50%
      width 100%
      em
        position relative
        display inline-block
        padding 0 .5rem
        height: .3rem
        line-height .3rem
        white-space nowrap
        background-color #fff
        &:before
        &:after
          transform rotate(45deg);
          position absolute
          top: .11rem
          left: .15rem
          content ''
          width .08rem
          height: .08rem
          background-color #ddd
        &:after
          right .15rem
          left auto
.appdown
  position: relative
  height: .8rem
  line-height: .8rem
  padding: 0 .5rem 0 1.1rem
  color: #fff
  background #2d2d2d url("/static/images/home/logo_app.png") no-repeat .3rem .15rem
  background-size .5rem .5rem
  a
    text-decoration underline
  & i
    position absolute
    right .3rem
    font-size .48rem
