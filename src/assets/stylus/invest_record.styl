.invests-total
  display flex
  position absolute
  z-index 200
  left 0
  right 0
  top .85rem
  height: 1.4rem
  background-color #fff
  color #666
  border-top 1px solid #f5f5f5
  & dl
    flex 1
    padding-left 1.3rem
    padding-top .36rem
    background-repeat no-repeat
    background-position .6rem .45rem
    background-size .52rem .52rem
    & dt
      font-size .22rem
      color #bbb
    & dd
      font-size .28rem
      white-space nowrap
  &.-hold dl
    &:nth-child(1)
      background-image url("/static/images/account/icon_invest_record_a.png")
    &:nth-child(2)
      background-image url("/static/images/account/icon_invest_record_b.png")
  &.-repay dl
    &:nth-child(1)
      background-image url("/static/images/account/icon_invest_record_c.png")
    &:nth-child(2)
      background-image url("/static/images/account/icon_invest_record_d.png")
  &.-appdown
    top: 1.6rem
