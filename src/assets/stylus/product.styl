//项目列表
.product-list
  padding-top .2rem
.product-item
  position: relative
  overflow: hidden
  padding: .3rem
  margin-bottom: .2rem
  color #666
  /*border-top 1px solid #dddddd*/
  /*border-bottom: 1px solid #dddddd*/
  background-color: #fff
  &.payed
    background: #fff url("/static/images/proudct/payed.png") no-repeat right .1rem
    background-size 1.3rem 1.18rem
  &.collection-end
    background: #fff url("/static/images/proudct/collection_end.png") no-repeat right .1rem
    background-size 1.3rem 1.18rem
  &:last-child
    margin-bottom: 0
  & h3
    width 100%
    font-size: .28rem
    font-weight: normal
    color: #666
    span
      display inline-block
      max-width 70%
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    .novice
      display inline-block
      background: #d82d2d
      border-radius: .5rem
      color #fff
      padding: 0 0.1rem
      font-size .2rem
      margin-left .1rem
      height: .3rem
      line-height .3rem
      vertical-align: middle
    & span
      vertical-align: middle
  .progress
    position: relative
    float: left
    width: 100%
    padding-right: .9rem
    margin: .3rem 0 .08rem
    span
      position: absolute
      right: 0
      top: -.12rem
      font-size: .2rem
      color: #999
    .progressbar
      display: block
      padding: 0
      margin: 0
      height: .04rem
      border-radius: .4rem
      background: #fbe7e7
      position: relative
      i
        position: absolute
        left: 0
        top: 0
        margin: 0
        padding: 0
        width 0
        height: .04rem
        border-radius .4rem
        background-color: #d82d2d;
        transition: all 1s linear;
        &:after
          position: absolute
          right: 0
          top: -.05rem
          display: block
          overflow hidden
          width .12rem
          height: .12rem
          font-size 0
          line-height 0
          background: #D82D2D;
          border: 1px solid rgba(255,255,255,0.8)
          box-shadow: 0 .02rem .04rem 0 #D82D2D;
          border-radius .12rem
          content: ''
  .product-props
    padding-top: .2rem
    & dl
      float: left
      width: 44%
      text-align: left
      &:first-child
        dd
          color: #d82d2d
          span:first-child
            font-size .48rem
      &:nth-child(2)
        width 20%
        dd
          line-height .65rem
      &:nth-child(3)
        width 36%
        padding-left 5%
        dd
          white-space nowrap
          line-height .65rem
      dt
        font-size: .22rem
        color: #999
      dd
        font-size .34rem
        height: .60rem
