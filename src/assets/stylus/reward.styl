.reward-list
  padding: .3rem .3rem 0
.reward
  .tab-nav
    position fixed
    top: 0
    left 20%
    width 60%
    height: .9rem
    z-index 5
    .tab-nav-item
      font-size .28rem
      background-color transparent
  .tab-panel
    background-color transparent
.reward-item
  position: relative
  overflow hidden
  padding: .25rem .25rem .25rem 2.3rem
  margin-bottom .3rem
  background: #fff
  //border-radius: .1rem
  color #585858
  //&:last-child
  //  margin-bottom 0
  &:before
  &:after
    content ''
    display block
    position: absolute
    left: 0
    top: 0
    width: .06rem
    height: 100%
    background-image url("/static/images/account/reward_left_bg.png")
    background-repeat repeat-y
    background-position left center
    background-size .06rem .2rem
  &:after
    left: auto
    right: 0
    background-image url("/static/images/account/reward_right_bg.png")
    background-position right center
  & h3
    font-size .28rem
    font-weight normal
    color #333
  .btn
    position absolute
    left: .4rem
    top: 1.2rem
    height: .45rem
  .reward-number
    border-right 1px dashed rgba(216, 45, 45, 0.3)
    text-align: center
    font-size .6rem
    color #d82d2d
    position absolute
    left 0
    top: 0
    bottom 0
    padding-top .4rem
    width 2rem
    height: 100%
    -webkit-box-pack:center;
    -webkit-box-align:center;
    &:before
    &:after
      content ''
      position absolute
      display block
      right: -.1rem
      top -.1rem
      background-color #f5f5f5
      width .2rem
      height .2rem
      border-radius .2rem
    &:after
      top auto
      bottom: -.1rem
    span
      font-size .28rem
  .reward-condition
    font-size .2rem
    padding-top .1rem
    li
      width 98%
      line-height 1.4
      white-space: nowrap;
  &.-coupon
    background-color #fff
    .reward-number
      color #f9b841
      border-right-color rgba(249, 184, 65, 0.8)
  &.-used
    background: #fff url("/static/images/account/reward_used.png") no-repeat 102% -.1rem
  &.-overdue
    background: #fff url("/static/images/account/reward_overdue.png") no-repeat 102% -.1rem
  &.-processing
    background: #fff url("/static/images/account/reward_processing.png") no-repeat 102% -.1rem
  &.-used
  &.-overdue
  &.-processing
    color #bbb
    background-size: 1.58rem 1.18rem
    & h3
      color #bbb
    .reward-number
      color #bbb
      border-right-color rgba(221, 221, 221, 0.8)
