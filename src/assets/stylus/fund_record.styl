.record-list
  padding: .3rem
  .record-item
    position: relative
    overflow hidden
    margin-bottom .3rem
    padding: .3rem
    background-color #fff
    -webkit-tap-highlight-color:transparent;
    &:last-child
      margin-bottom 0
    dl
      float: left
      dt
        font-size .3rem
        color #333
      dd
        font-size .2rem
        color #999
      &.record-info
        float: right;
        text-align: right;
        dt
          color #999999
          &.-red
            color #D82D2D
          &.-green
            color #1C9D32
    .record-remark
      float: left;
      height: 0
      overflow hidden
      color #999
      font-size .22rem
      width 100%
      transition: all .1s linear
      p
        font-size .22rem
      &:after
        content ''
        position absolute
        top 0
        left 0
        right: 0
        overflow hidden
        height: 1px
        background-color #f5f5f5
      &.-show
        position: relative
        height auto
        padding .2rem 0
        margin-top .2rem
        transition: all .1s linear
    .more
      position: absolute
      bottom: .05rem
      left: 50%
      margin-left  -.1rem
      color #999
