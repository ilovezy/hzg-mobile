.protocol-group
  margin-bottom -.2rem
  padding: .15rem .3rem .3rem
  background-color: #fff
.protocol-header
  padding: .3rem
  font-size: .32rem
  text-align: center
.protocol-body
  line-height 1.5
  color: #555
  h1
    text-align: center
    color: #333
  h2
    color: #333
    line-height: .8rem
  strong
    color #333
  ul
    list-style: decimal
    padding-left: .36rem
    li
      padding-bottom: .15rem
      &:last-child
        padding-bottom: 0
      ul
        list-style lower-alpha
        padding-top: .15rem
        ul
          list-style: disc;
          padding-left .3rem
      p
        padding-top: .15rem
  p
    text-indent: 2em
    margin-bottom: .15rem
    &:last-child
      margin-bottom: 0
.protocol-special
  padding-top: .2rem
.protocol-line
  padding: .2rem 0
  text-align: center
  color: #888
.protocol-table
  margin-top: .15rem
  width: 100%
  border: 1px solid #ddd
  border-collapse: collapse
  border-spacing: 0
  &.attachment
    margin: 0
  tr
    th,td
      padding: .15rem
      border: 1px solid #999
      text-align: left
.signed-table
  margin-top: 0
  width: 100%
  th,td
    width: 50%
    padding: .15rem
    text-align: left
    & img
      max-width: 100%
  th
    font-weight: bold
  td
    padding-bottom: .3rem
